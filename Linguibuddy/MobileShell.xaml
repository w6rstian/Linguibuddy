<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Linguibuddy.MobileShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:views="clr-namespace:Linguibuddy.Views"
    Title="Linguibuddy"
    FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="{loc:Translate Home}" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
        </Tab>

        <Tab Title="{loc:Translate Dictionary}" Icon="dictionary.png">
            <ShellContent ContentTemplate="{DataTemplate views:DictionaryPage}" Route="DictionaryPage" />
        </Tab>

        <Tab Title="{loc:Translate Flashcards}" Icon="flashcards.png">
            <ShellContent ContentTemplate="{DataTemplate views:FlashcardsCollectionsPage}" Route="FlashcardsCollectionsPage" />
        </Tab>

        <Tab Title="{loc:Translate Settings}" Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="SettingsPage"/>
        </Tab>

        <Tab Title="Mini Games" Icon="games.png">
            <ShellContent ContentTemplate="{DataTemplate views:MiniGamesPage}" Route="MiniGamesPage"/>
        </Tab>

    </TabBar>
</Shell>