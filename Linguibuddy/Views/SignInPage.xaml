<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Linguibuddy.ViewModels"
             xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
             x:DataType="vm:SignInViewModel"
             x:Class="Linguibuddy.Views.SignInPage"
             Title="{loc:Translate SignIn}">
    <VerticalStackLayout
        Margin="0,30,0,0">
        <Label Text="{loc:Translate AppName}"
               HorizontalTextAlignment="Center"
               FontSize="Header" />
        <Label Text="{loc:Translate SignInWelcome}"
               HorizontalTextAlignment="Center"
               FontSize="Subtitle"
               Margin="0,0,0,20" />
        <FlexLayout Direction="Column"
                    AlignItems="Center">
            <VerticalStackLayout Spacing="20">
                <Entry Text="{Binding Email}" Placeholder="{loc:Translate EmailPlaceholder}" />
                <VerticalStackLayout>
                    <Entry IsPassword="True" Text="{Binding Password}"
                           Placeholder="{loc:Translate PasswordPlaceholder}" />
                    <Label Text="{loc:Translate SignInError}"
                           FontSize="12"
                           TextColor="Red"
                           Opacity="{Binding LabelErrorOpacity}" />
                </VerticalStackLayout>
                <Button Command="{Binding SignInCommand}" Text="{loc:Translate SignIn}" />
                <Button Command="{Binding NavigateSignUpCommand}" Text="{loc:Translate SignUpPls}" />
            </VerticalStackLayout>
        </FlexLayout>
    </VerticalStackLayout>
</ContentPage>