<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Linguibuddy.Views.SignUpPage"
             xmlns:vm="clr-namespace:Linguibuddy.ViewModels"
             xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
             x:DataType="vm:SignUpViewModel"
             Title="{loc:Translate SignUp}">
    <VerticalStackLayout>
        <Label Text="{loc:Translate AppName}"
               HorizontalTextAlignment="Center"
               FontSize="Header" />
        <Label Text="{loc:Translate CreateFreeAccount}"
               HorizontalTextAlignment="Center"
               FontSize="Subtitle"
               Margin="0,0,0,20" />
        <FlexLayout Direction="Column"
                    AlignItems="Center">
            <VerticalStackLayout Spacing="10">
                <VerticalStackLayout>
                    <Entry Text="{Binding Username}" Placeholder="{loc:Translate UsernamePlaceholder}" />
                    <Label Text="{loc:Translate UsernameEmpty}"
                           FontSize="12"
                           TextColor="Red"
                           Opacity="{Binding LabelUsernameErrorOpacity}" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Entry Text="{Binding Email}" Placeholder="{loc:Translate EmailPlaceholder}" />
                    <Label Text="{loc:Translate EmailIncorrect}"
                           FontSize="12"
                           TextColor="Red"
                           Opacity="{Binding LabelEmailErrorOpacity}" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Entry IsPassword="True" Text="{Binding Password}" Placeholder="{loc:Translate PasswordPlaceholder}" />
                    <Label Text="{loc:Translate PasswordLength}"
                           FontSize="10"
                           TextColor="LightSlateGray" />
                    <Label Text="{loc:Translate PasswordInsufficient}"
                           FontSize="12"
                           TextColor="Red"
                           Opacity="{Binding LabelPasswordErrorOpacity}" />
                </VerticalStackLayout>
                <!-- TODO: Add confirm password -->
                <Button Command="{Binding SignUpCommand}" Text="{loc:Translate SignUp}" />
                <Button Command="{Binding NavigateSignInCommand}" Text="{loc:Translate SignInPls}" />
            </VerticalStackLayout>
        </FlexLayout>
    </VerticalStackLayout>
</ContentPage>