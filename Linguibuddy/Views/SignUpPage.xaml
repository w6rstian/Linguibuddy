<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Linguibuddy.Views.SignUpPage"
             Title="Sign Up">
    <VerticalStackLayout>
        <Label Text="Linguibuddy"
               HorizontalTextAlignment="Center"
               FontSize="Header" />
        <Label Text="Create a free account"
               HorizontalTextAlignment="Center"
               FontSize="Subtitle"
               Margin="0,0,0,20"/>
        <FlexLayout Direction="Column"
                    AlignItems="Center">
            <VerticalStackLayout Spacing="10">
                <VerticalStackLayout>
                    <Entry Text="{Binding Username}" Placeholder="Username" />
                    <Label Text="Username is empty"
                           FontSize="12"
                           TextColor="Red"
                           Opacity="{Binding LabelUsernameErrorOpacity}" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Entry Text="{Binding Email}" Placeholder="Email address" />
                    <Label Text="Email incorrect"
                           FontSize="12"
                           TextColor="Red"
                           Opacity="{Binding LabelEmailErrorOpacity}" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Entry IsPassword="True" Text="{Binding Password}" Placeholder="Password" />
                    <Label Text="Password must use 6 characters or more"
                           FontSize="10"
                           TextColor="LightSlateGray" />
                    <Label Text="Password insufficient"
                           FontSize="12"
                           TextColor="Red"
                           Opacity="{Binding LabelPasswordErrorOpacity}" />
                </VerticalStackLayout>
                <!-- TODO: Add confirm password -->
                <Button Command="{Binding SignUpCommand}" Text="Sign Up" />
                <Button Command="{Binding NavigateSignInCommand}" Text="Already have an account? Sign in" />
            </VerticalStackLayout>
        </FlexLayout>
    </VerticalStackLayout>
</ContentPage>