<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Linguibuddy.ViewModels"
             xmlns:models="clr-namespace:Linguibuddy.Models"
             x:Class="Linguibuddy.Views.FlashcardsCollectionsPage"
             x:DataType="vm:FlashcardsCollectionsViewModel"
             Title="FlashcardsCollectionsPage">
        
    <Grid RowDefinitions="Auto, *">
        <Button Text="+ Nowa Kolekcja"
                Command="{Binding CreateCollectionCommand}"
                Margin="20"
                BackgroundColor="{StaticResource Primary}"/>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Collections}" Margin="15,0">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:FlashcardCollection">
                    <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" HeightRequest="150" Padding="10">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FlashcardsCollectionsViewModel}}, Path=GoToLearningCommand}"
                                                  CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>

                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="ðŸ“š" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="{Binding Name}" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding Flashcards.Count, StringFormat='{0} fiszek'}" TextColor="Gray" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>