<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Linguibuddy.ViewModels"
             x:DataType="vm:MiniGamesViewModel"
             x:Class="Linguibuddy.Views.MiniGamesPage"
             Title="Mini Games">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Wybierz tryb nauki" 
                   FontSize="22" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   Margin="0,10,0,20"/>

            <Frame HeightRequest="100" CornerRadius="15" HasShadow="True" Padding="0" IsClippedToBounds="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToAudioQuizCommand}"/>
                </Frame.GestureRecognizers>

                <Grid ColumnDefinitions="100, *" BackgroundColor="{StaticResource Primary}">
                    <Image Source="speaker_icon.png" 
                           Aspect="AspectFit" 
                           Margin="20"
                           Grid.Column="0"/>

                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Padding="10,0">
                        <Label Text="Audio Quiz" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="White"/>
                        <Label Text="Dopasuj słowo do dźwięku" 
                               FontSize="14" 
                               TextColor="#E0E0E0"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <Frame HeightRequest="100" CornerRadius="15" HasShadow="True" Padding="0" Opacity="0.6">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToImageQuizCommand}"/>
                </Frame.GestureRecognizers>

                <Grid ColumnDefinitions="100, *" BackgroundColor="Gray">
                    <Label Text="?" 
                           FontSize="40" 
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           Grid.Column="0"/>

                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Padding="10,0">
                        <Label Text="Image Match" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="White"/>
                        <Label Text="Wkrótce dostępne" 
                               FontSize="14" 
                               TextColor="#E0E0E0"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>