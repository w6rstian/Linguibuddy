<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Linguibuddy.ViewModels"
             x:Class="Linguibuddy.Views.FlashcardsPage"
             x:DataType="vm:FlashcardsViewModel"
             Title="Flashcards">
    <Grid>
        <VerticalStackLayout IsVisible="{Binding IsFinished}"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="20">
            <Label Text="Gratulacje!"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2E7D32"/>
            <Label Text="Przerobiłeś wszystkie fiszki na dziś."
                   FontSize="16"
                   TextColor="#666"/>
        </VerticalStackLayout>


        <Grid RowDefinitions="*, Auto" 
              IsVisible="{Binding IsLearning}">

            <VerticalStackLayout VerticalOptions="Center" Spacing="20">
                <Border x:Name="FlashcardBorder"
                        Stroke="Transparent"
                        BackgroundColor="White"
                        HeightRequest="350"
                        WidthRequest="300"
                        MaximumWidthRequest="400">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,10" Radius="20" Opacity="0.1"/>
                    </Border.Shadow>

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCardTapped"/>
                    </Border.GestureRecognizers>

                    <Grid Padding="30">
                        <VerticalStackLayout x:Name="FrontView" 
                                             VerticalOptions="Center" 
                                             HorizontalOptions="Center"
                                             IsVisible="True">
                            <Label Text="{Binding CurrentFlashcard.Word}" 
                                   FontSize="36" 
                                   FontAttributes="Bold" 
                                   TextColor="#333" 
                                   HorizontalOptions="Center"/>

                            <Label Text="{Binding CurrentFlashcard.PartOfSpeech}" 
                                   FontSize="14" 
                                   TextColor="#888" 
                                   HorizontalOptions="Center" 
                                   Margin="0,5,0,0"/>

                            <Label Text="Kliknij, aby sprawdzić" 
                                   FontSize="12" 
                                   TextColor="#CCC" 
                                   HorizontalOptions="Center" 
                                   Margin="0,40,0,0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout x:Name="BackView" 
                                             VerticalOptions="Center" 
                                             HorizontalOptions="Center"
                                             IsVisible="False">
                            <Label Text="{Binding CurrentFlashcard.Translation}" 
                                   FontSize="32" 
                                   FontAttributes="Bold" 
                                   TextColor="#2D7D9A" 
                                   HorizontalOptions="Center"/>

                            <BoxView HeightRequest="1" 
                                     Color="#EEE" 
                                     WidthRequest="150" 
                                     Margin="0,20"/>

                            <Label Text="{Binding CurrentFlashcard.ExampleSentence}" 
                                   FontSize="16" 
                                   TextColor="#555" 
                                   FontAttributes="Italic" 
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="1" 
                                   Spacing="20" 
                                   HorizontalOptions="Center" 
                                   Margin="0,0,0,40">

                <Button Text="Jeszcze nie" 
                        BackgroundColor="#FFCDD2" 
                        TextColor="#C62828"
                        Command="{Binding NextCardCommand}"
                        Clicked="OnNextCardClicked" 
                        WidthRequest="120"
                        CornerRadius="25"/>

                <Button Text="Umiem!" 
                        BackgroundColor="#C8E6C9" 
                        TextColor="#2E7D32"
                        Command="{Binding NextCardCommand}"
                        Clicked="OnNextCardClicked"
                        WidthRequest="120"
                        CornerRadius="25"/>
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>