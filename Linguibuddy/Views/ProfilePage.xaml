<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
             x:Class="Linguibuddy.Views.ProfilePage"
             Title="Profile"
             Padding="20,0">
    <ScrollView>
        <Grid ColumnDefinitions="*, *"
              RowDefinitions="Auto, Auto"
              RowSpacing="30">
            <Border
                Grid.ColumnSpan="2"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray950}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray400}}"
                Padding="50,0"
                MaximumHeightRequest="150"
                MaximumWidthRequest="600"
                VerticalOptions="Center"
                HorizontalOptions="Fill">

                <VerticalStackLayout
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumWidthRequest="110">

                    <Label
                        FontSize="Caption"
                        TextColor="{AppThemeBinding Light={StaticResource Gray300}}"
                        Text="Profile"
                        HorizontalTextAlignment="Center" />
                    <Label
                        FontSize="Large"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        Text="{Binding DisplayName}"
                        HorizontalTextAlignment="Center" />
                    <Label
                        FontSize="Micro"
                        TextColor="{AppThemeBinding Light={StaticResource Gray500}}"
                        Text="{Binding Email}"
                        HorizontalTextAlignment="Center" />
                    <HorizontalStackLayout
                        Spacing="10"
                        Margin="0,10,0,0">
                        <Label
                            FontSize="Medium"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            Text="Points:"
                            HorizontalTextAlignment="Center" />
                        <Label
                            FontSize="Medium"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            Text="{Binding Points}"
                            HorizontalTextAlignment="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            <Border
                Grid.Row="1"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray950}}"
                Stroke="{AppThemeBinding Light=OrangeRed, Dark=OrangeRed}"
                Padding="25,10"
                MaximumHeightRequest="300"
                MaximumWidthRequest="300"
                VerticalOptions="Center"
                HorizontalOptions="Fill">
                <VerticalStackLayout>
                    <Label
                        Text="Learning streak"
                        FontSize="Title"
                        HorizontalTextAlignment="Start" />
                    <HorizontalStackLayout
                        Spacing="10"
                        HorizontalOptions="Center">
                        <Label
                            FontSize="Large"
                            Text="{Binding CurrentStreak}"
                            HorizontalTextAlignment="Center" />
                    </HorizontalStackLayout>
                    <FlexLayout
                        Direction="Row"
                        Wrap="Wrap"
                        JustifyContent="End">
                        <Label
                            Margin="0,0,5,0"
                            FontSize="Subtitle"
                            Text="Best:" />
                        <Label
                            FontSize="Subtitle"
                            Text="{Binding BestStreak}" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>
            <Border
                Grid.Row="1"
                Grid.Column="1"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray950}}"
                Stroke="{AppThemeBinding Light=Goldenrod, Dark=Gold}"
                Padding="25,10"
                MaximumHeightRequest="300"
                MaximumWidthRequest="300"
                VerticalOptions="Center"
                HorizontalOptions="Fill">
                <VerticalStackLayout>
                    <Label
                        Text="{loc:Translate Achievements}"
                        FontSize="Title"
                        HorizontalTextAlignment="End" />
                    <HorizontalStackLayout
                        Spacing="10"
                        HorizontalOptions="Center">
                        <Label
                            FontSize="Large"
                            Text="{Binding UnlockedAchievementsCount}"
                            HorizontalTextAlignment="Center" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout
                        Spacing="10"
                        HorizontalOptions="End">
                        <Label
                            FontSize="Subtitle"
                            Text=""
                            HorizontalTextAlignment="End" />
                        <Label
                            FontSize="Subtitle"
                            Text=""
                            HorizontalTextAlignment="End" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>