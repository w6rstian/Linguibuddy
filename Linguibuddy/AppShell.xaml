<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Linguibuddy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Linguibuddy"
    xmlns:views="clr-namespace:Linguibuddy.Views"
    Title="Linguibuddy">

    <FlyoutItem Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="Dictionary">
        <ShellContent
            Title="Dictionary"
            ContentTemplate="{DataTemplate views:DictionaryPage}"
            Route="DictionaryPage" />
    </FlyoutItem>
    <FlyoutItem Title="Flashcards">
        <ShellContent
            Title="Flashcards"
            ContentTemplate="{DataTemplate views:FlashcardsPage}"
            Route="FlashcardsPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Settings">
        <ShellContent 
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage"/>
    </FlyoutItem>

</Shell>
